{
    "name": "effect-php/runtime-workerman",
    "description": "Workerman runtime engine for EffectPHP",
    "type": "library",
    "license": "MIT",
    "keywords": ["effect", "monad", "functional", "async", "error-handling", "runtime", "workerman"],
    "authors": [
        {
            "name": "Dariusz Debowczyk",
            "email": "ddebowczyk@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "workerman/workerman": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "EffectPHP\\Workerman\\": "src/",
            "EffectPHP\\Core\\": "../core/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EffectPHP\\Workerman\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "test-unit": "pest tests/Unit",
        "test-integration": "pest tests/Integration"
    }
}
