{
    "name": "effect-php/core",
    "description": "Effect system for PHP8 - A port of Effect-TS with stack-safe execution",
    "type": "library",
    "license": "MIT",
    "keywords": ["effect", "monad", "functional", "async", "error-handling"],
    "authors": [
        {
            "name": "Dariusz Debowczyk",
            "email": "ddebowczyk@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "EffectPHP\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EffectPHP\\Core\\Tests\\": "../../tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "@php ./vendor/bin/pest",
        "test-unit": "@php ./vendor/bin/pest tests/Unit",
        "test-feature": "@php ./vendor/bin/pest tests/Feature",
        "phpstan": "@php ./vendor/bin/phpstan -c phpstan.neon",
        "psalm": "@php ./vendor/bin/psalm"
    }
}
